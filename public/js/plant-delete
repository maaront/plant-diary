// Add event listener to button click
document.getElementById('add-plant').addEventListener('click', async () => {

// Function to delete a plant
const deletePlant = async (plantId) => {
  try {
    const response = await fetch(`/plant/${plantId}`, {
      method: 'DELETE',
    });

    if (response.ok) {
      // Plant deleted successfully
      console.log('Plant deleted successfully');
    } else {
      // Failed to delete plant
      console.log('Failed to delete plant');
    }
  } catch (err) {
    console.error(err);
  }
};

  // Create new div for fail/success message
  const messageDiv = document.createElement('div');

  if (response.ok) {
    // Success
    messageDiv.innerText = 'Plant deleted successfully';
  } else {
    // Failed
    messageDiv.innerText = 'Failed to delete plant';
  }

  // Add the new div to the body of the document
  document.body.appendChild(messageDiv);
});