<main class="container mt-5">
  <div class="row justify-content-center search-page-container">
    <div class="col-12">
      <header>
        <h1 class="mb-4 text-center">{{user.user_name}}'s Plant Dashboard</h1>
      </header>
    </div>
    <br>
    <div id="dashboard-container" class="row justify-content-center d-flex gap-3">
      {{#if user.plants}}
        <div class="col-6">
          <h2>Indoor Plants</h2>
          {{#each user.plants as |plant|}}
            {{#if (eq plant.group "indoor")}}
              <div class="card col-4" data-plant-id="{{plant.id}}">
                <a href="/plant/{{plant.common_name}}">
                  <img src="{{plant.image_url}}" class="card-img-top">
                  <div class="card-body">
                    <p class="card-title">{{plant.common_name}}</p>
                    <p class="card-body">{{plant.scientific_name}}</p>
                    <div class="delete-element">
                      <button class="btn btn-danger delete-button">Delete</button>
                    </div>
                  </div>
                </a>
              </div>
            {{/if}}
          {{/each}}
        </div>
        <div class="col-6">
          <h2>Outdoor Plants</h2>
          {{#each user.plants as |plant|}}
            {{#if (eq plant.group "outdoor")}}
              <div class="card col-4" data-plant-id="{{plant.id}}">
                <a href="/plant/{{plant.common_name}}">
                  <img src="{{plant.image_url}}" class="card-img-top">
                  <div class="card-body">
                    <p class="card-title">{{plant.common_name}}</p>
                    <p class="card-body">{{plant.scientific_name}}</p>
                    <div class="delete-element">
                      <button class="btn btn-danger delete-button">Delete</button>
                    </div>
                  </div>
                </a>
              </div>
            {{/if}}
          {{/each}}
        </div>
      {{else}}
        <div class="col-12">
          <p>No plants yet!</p>
          <p><a href="/plant/search">No plants yet!</a></p>
        </div>
      {{/if}}
    </div>
  </div>
</main>

<script src="/js/plant-delete.js"></script>
