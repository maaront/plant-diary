<head>
  <title>Search Page</title> 
  <style>
    .result-link {
      cursor: pointer;
      color: blue;
      text-decoration: underline;
    }
  </style>
</head> 
<!-- end of head section for handlebars testing -->
<body>
  <h1>Plant Search</h1>

  <!-- Search form -->
  <form id="search-form">
    <input type="text" id="search-input" placeholder="Search for any Plant">
    <button type="submit">Search</button>
  </form>

  <h2>Search Results</h2>
  <div id="search-results"></div>

  <!-- Define the Handlebars template -->
  <script id="search-results-template" type="text/x-handlebars-template">
    {{#each results}}
      <div class="result">
        <h3><a class="result-link" data-result-id="{{id}}">{{title}}</a></h3>
        <p>{{description}}</p> 
          {{#if image}}
          <img class="result-image" src="{{image}}" alt="Result Image">
        {{/if}}
      </div>
    {{else}}
      <p>No results found.</p>
    {{/each}}
  </script>
</body>
