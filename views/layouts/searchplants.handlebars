<!-- this whole head section is really for me to make sure the handlebars is working weeeeeee-->
<head>
  <title>Search Page</title> 
  <style>
    .result-link {
      cursor: pointer;
      color: blue;
      text-decoration: underline;
    }
  </style>
</head> 
<!-- end of head section for handlebars testing -->
<body>
  <h1>Plant Search</h1>

  <!-- Search form -->
  <form id="search-form">
    <input type="text" id="search-input" placeholder="Search for any Plant">
    <button type="submit">Search</button>
  </form>

  <h2>Search Results</h2>
  <div id="search-results">
    {{#each plants}}
      <div class="result">
        
        <p>{{this.common_name}}</p> 
         
      </div>
    {{else}}
      <p>No results found.</p>
    {{/each}}
  </div>
</body>
